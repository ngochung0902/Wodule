<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_group_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boder_bg_content">
        <TextView
            android:text="@string/ACCOUNTING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text14"
            android:drawableLeft="@mipmap/ic_newuser"
            android:padding="@dimen/margin10"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lbTitle" />
        <LinearLayout
            android:id="@+id/ll_group_center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_rect_layout_white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:background="@drawable/border_rect_greentop">

                <TextView
                    android:text="DATE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_date"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:textSize="@dimen/text16"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_alignParentLeft="true"
                    android:visibility="invisible"/>

                <TextView
                    android:text="EXAM-ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_examId"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin5"
                    android:textSize="@dimen/text16"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_toLeftOf="@+id/header_score"
                    android:layout_toRightOf="@+id/header_date"
                    android:visibility="invisible"/>

                <TextView
                    android:text="SCORE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_score"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:textSize="@dimen/text16"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_group_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin5"
                >
                <TextView
                    android:text="DATE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbdate"
                    android:layout_weight="0.3"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:textSize="@dimen/text14"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_alignParentLeft="true"
                    android:visibility="visible"/>

                <TextView
                    android:text="EXAM-ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbexamId"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textSize="@dimen/text14"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_toRightOf="@+id/lbdate"
                    android:layout_toLeftOf="@+id/lbScore"
                    android:visibility="visible"/>

                <TextView
                    android:text="SCORE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbScore"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:textSize="@dimen/text14"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_toLeftOf="@+id/lbStatus"
                    android:visibility="visible"/>

                <TextView
                    android:text="STATUS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbStatus"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:textSize="@dimen/text14"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/listHistoryAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_group_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivBack"
                android:src="@mipmap/btn_back"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
            <TextView
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmit"
                android:textSize="@dimen/text16"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin10"
                android:paddingRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin15"
                android:layout_marginBottom="@dimen/margin15"
                android:layout_marginRight="@dimen/margin30"
                android:visibility="invisible"
                android:background="@drawable/border_rect_green_dark"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
